<h2><%= @project.title() %></h3>
<p>Description</p>

<% if @project.volunteers().any?() %>
  <h3>Here are all of the volunteers for this project:</h3>

  <ul>
    <% @project.volunteers().each() do |volunteer| %>
      <li><%= volunteer.name() %></li>
    <% end %>
  </ul>

  <% else %>
    <p>Currently, there are no volunteers for this project<p>
  <% end %>

<h2>Add a Volunteer</h2>
  <form action="/volunteer/new" method="post">
    <div class="form-group">
      <label class="form-label" for="volunteer">Volunteer Name:</label>
      <br>
      <input class="form-control" id="name" name="tinametle" type="text" placeholder="name">
      <br>
      <button type="submit" class="button btn-primary">Add</button>
    </div>
  </form>

